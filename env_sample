# ThingsBoard Connection Settings
TB_HOST=https://your-thingsboard-host.com  # Use HTTPS in production
TB_USERNAME=your-username@domain.com
TB_PASSWORD=your-secure-password

# Project Settings
PROJECT_NAME=TB-API-SKD
VERSION=0.1.0
DEBUG=false  # NEVER enable in production

# API Security Settings
API_KEY=your-secret-api-key-here  # Generate a strong random key for production
SECRET_KEY=your-jwt-secret-key    # For future JWT/session signing
ACCESS_TOKEN=  # Populated automatically after authentication

# Network Security
ALLOWED_HOSTS=your-domain.com,api.your-domain.com  # Prevent Host header attacks
BACKEND_CORS_ORIGINS=https://your-frontend.com,https://admin.your-domain.com

# Rate Limiting
RATE_LIMIT_REQUESTS=100  # Requests per minute per IP
RATE_LIMIT_WINDOW=60     # Window in seconds 